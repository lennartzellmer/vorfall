{
  "name": "vorfall",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "description": "Monorepo for Vorfall event sourcing packages.",
  "author": "",
  "license": "MIT",
  "keywords": [
    "event-sourcing",
    "monorepo",
    "mongodb"
  ],
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm changeset:version && pnpm install --frozen-lockfile && pnpm test && pnpm build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "^2.27.8",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
